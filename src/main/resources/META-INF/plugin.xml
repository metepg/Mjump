<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.metepg</id>
    <name>KJump</name>
    <vendor url="https://github.com/a690700752/KJump">a690700752</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.metepg.UserConfig"/>
        <applicationConfigurable instance="com.metepg.KJumpConfigurable" displayName="KJump"/>
    </extensions>

    <actions>
        <action id="KJumpAction.Char1" class="com.metepg.Char1Action" text="KJump Char 1"
                description="Input 1 character and jump to any same character."/>
        <action id="KJumpAction.Char2" class="com.metepg.Char2Action" text="KJump Char 2"
                description="Input 2 character and jump to any same character."/>
        <action id="KJumpAction.Word0" class="com.metepg.Word0Action" text="KJump Word 0"
                description="Jump to any word."/>
        <action id="KJumpAction.Word1" class="com.metepg.Word1Action" text="KJump Word 1"
                description="Input 1 character and jump to any word start with this character."/>
        <action id="KJumpAction.Line" class="com.metepg.LineAction" text="KJump Line"
                description="Jump to any line."/>
        <action id="KJumpAction.Word1GotoDeclaration" class="com.metepg.GotoDeclarationWord1Action"
                text="KJump Word 1 Goto Declaration"
                description="Input 1 character and jump to declaration of any word start with this character."/>
        <action id="KJumpAction.GlobalChar1" class="com.metepg.GlobalChar1Action" text="KJump Global Char 1"
                description="Input 1 character and jump to any same character across editors."/>
        <action id="KJumpAction.GlobalChar2" class="com.metepg.GlobalChar2Action" text="KJump Global Char 2"
                description="Input 2 characters and jump to any same character across editors."/>
        <action id="KJumpAction.GlobalWord0" class="com.metepg.GlobalWord0Action" text="KJump Global Word 0"
                description="Jump to any word across all visible editors."/>
        <action id="KJumpAction.GlobalWord1" class="com.metepg.GlobalWord1Action" text="KJump Global Word 1"
                description="Input 1 character and jump to any word start with this character across all editors."/>
        <action id="KJumpAction.GlobalLine" class="com.metepg.GlobalLineAction" text="KJump Global Line"
                description="Jump to any line cross all visible editors."/>
    </actions>

</idea-plugin>
